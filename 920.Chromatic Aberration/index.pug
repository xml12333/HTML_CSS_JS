- var n_strips = 12;
- var n_layers = 3;
- var n_vlines = 5, m = 2*n_vlines - 1;

style
	| :root { --ns: #{n_strips}; --nl: #{n_layers}; --m: #{m} }
	- for(var j = 0; j < n_layers; j++)
		| .layer:nth-child(#{j + 1}) { --j: #{j} }
- for(var i = 0; i < n_strips; i++)
	.strip(style=`--i: ${i}`)
		- for(var j = 0; j < n_layers; j++)
			.layer